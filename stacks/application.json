{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "AWS CloudFormation Template for Hydra-in-a-Box; Version 0.1",

  "Parameters" : {
    "KeyName": {
      "Type": "AWS::EC2::KeyPair::KeyName",
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the ECS instances"
    },
    "S3Bucket": {
      "Type": "String",
      "Description": "S3 bucket to the deployment artifacts",
      "Default": "hybox-deployment-artifacts" 
    },
    "S3KeyPrefix" : {
      "Description" : "S3 prefix to deployment artifacts",
      "Type" : "String",
      "Default": "current"
    },
    "WebappS3Key" : {
      "Description" : "S3 key to webapp deployment artifacts",
      "Type" : "String",
      "Default": "hybox/current/hybox.zip"
    },
    "PrivateZoneName" : {
      "Description" : "Route53 zone to create an alias in",
      "Type" : "String"
    },
    "PublicZoneName" : {
      "Description" : "Route53 zone to create an alias in",
      "Type" : "String"
    },
    "DatabaseUsername": {
      "Type": "String",
      "Description": "Database Root Username",
      "Default": "root"
    },
    "DatabasePassword": {
      "NoEcho": "true",
      "Type": "String",
      "Description": "Password for the DB Root User"
    },
    "SecretKeyBase" : {
      "NoEcho": "true",
      "Description" : "Secret key for Rails",
      "Type" : "String"
    }
  },
  "Metadata" : {
    "AWS::CloudFormation::Interface" : {
      "ParameterGroups" : [
        {
          "Label" : { "default" : "Deployment Artifacts" },
          "Parameters" : [ "S3Bucket", "S3KeyPrefix", "WebappS3Key" ]
        },
        {
          "Label" : { "default" : "Network Configuration" },
          "Parameters" : [ "KeyName" ]
        },
        {
          "Label" : { "default" : "DNS Configuration"},
          "Parameters" : [ "PublicZoneName", "PrivateZoneName" ]
        },
        {
          "Label" : { "default" : "Application Configuration" },
          "Parameters" : [ "DatabaseUsername", "DatabasePassword", "ZookeeperHosts", "SecretKeyBase" ]
        }
      ]
    }
  },
  "Resources" : {
    "vpc" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "KeyName" : { "Fn::Join" : [",", [{ "Ref" : "KeyName" }]] }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/vpc.json"]] }
      }
    },
    "zookeeper" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "KeyName" : { "Fn::Join" : [",", [{ "Ref" : "KeyName" }]] },
          "SubnetID" : { "Fn::GetAtt" : ["vpc", "Outputs.PrivateSubnets"] },
          "HostedZoneName" : { "Ref" : "PrivateZoneName" }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/zookeeper.json"]] }
      }
    },
    "fcrepo" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "EBApplicationName" : { "Fn::Join": ["-", [{ "Ref" : "AWS::StackName"}, "fcrepo"]] },
          "KeyName" : { "Fn::Join" : [",", [{ "Ref" : "KeyName" }]] },
          "SubnetID" : { "Fn::GetAtt" : ["vpc", "Outputs.PrivateSubnets"] },
          "S3Bucket" : { "Ref" : "S3Bucket" },
          "HostedZoneName" : { "Ref" : "PrivateZoneName" }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/fcrepo.json"]] }
      }
    },
    "solr" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "KeyName" : { "Fn::Join" : [",", [{ "Ref" : "KeyName" }]] },
          "HostedZoneName" : { "Ref" : "PrivateZoneName" },
          "SubnetID" : { "Fn::GetAtt" : ["vpc", "Outputs.PrivateSubnets"] },
          "ZookeeperHosts" : { "Fn::GetAtt" : ["zookeeper", "Outputs.EndpointAddress"] }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/solr.json"]] }
      }
    },
    "redis" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "SubnetID" : { "Fn::GetAtt" : ["vpc", "Outputs.PrivateSubnets"] },
          "SecurityGroups" : { "Fn::GetAtt" : [ "vpc", "Outputs.DefaultSecurityGroup"] }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/redis.json"]] }
      }
    },
    "database" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "SubnetID" : { "Fn::GetAtt" : ["vpc", "Outputs.PrivateSubnets"] },
          "SecurityGroups" : { "Fn::GetAtt" : [ "vpc", "Outputs.DefaultSecurityGroup"] },
          "MasterUsername" : { "Ref" : "DatabaseUsername" },
          "MasterUserPassword" : { "Ref" : "DatabasePassword" }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/postgres.json"]] }
      }
    },
    "webapp" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "EBApplicationName" : { "Ref" : "AWS::StackName" },
          "KeyName" : { "Fn::Join" : [",", [{ "Ref" : "KeyName" }]] },
          "S3Bucket" : { "Ref" : "S3Bucket" },
          "S3Key" : { "Ref" : "WebappS3Key" },
          "PrivateSubnets" : { "Fn::GetAtt" : ["vpc", "Outputs.PrivateSubnets"] },
          "PublicSubnets" : { "Fn::GetAtt" : ["vpc", "Outputs.PublicSubnets"] },
          "SecurityGroups" : { "Fn::GetAtt" : [ "vpc", "Outputs.DefaultSecurityGroup"] },
          "HostedZoneName" : { "Ref" : "PublicZoneName" },
          "SecretKeyBase" : { "Ref" : "SecretKeyBase" },
          "FcrepoUrl" : { "Fn::GetAtt" : ["fcrepo", "Outputs.URL"] },
          "SolrUrl" : { "Fn::GetAtt" : ["solr", "Outputs.URL"] },
          "ZookeeperHosts" : { "Fn::Join": ["", [{ "Fn::GetAtt" : ["zookeeper", "Outputs.EndpointAddress"] }, "/configs"]] },
          "RedisHost" : { "Fn::GetAtt" : ["redis", "Outputs.EndpointAddress"] },
          "RedisPort" : { "Fn::GetAtt" : ["redis", "Outputs.EndpointPort"] },
          "RDSDatabaseName" : { "Fn::GetAtt" : ["database", "Outputs.DatabaseName"] },
          "RDSHostname" : { "Fn::GetAtt" : ["database", "Outputs.EndpointAddress"] },
          "RDSPort" : { "Fn::GetAtt" : ["database", "Outputs.EndpointPort"] },
          "RDSUsername" : { "Ref" : "DatabaseUsername" },
          "RDSPassword" : { "Ref" : "DatabasePassword" }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/webapp.json"]] }
      }
    },
    "codepipeline" : {
      "Type" : "AWS::CloudFormation::Stack",
      "Properties" : {
        "Parameters" : {
          "ApplicationName" : { "Ref" : "AWS::StackName"},
          "EnvironmentName" : { "Ref" : "AWS::StackName"},
          "S3Bucket" : { "Ref" : "S3Bucket" },
          "S3Key" : { "Ref" : "WebappS3Key" }
        },
        "TemplateURL" : { "Fn::Join" : ["", ["https://s3.amazonaws.com/", { "Ref" : "S3Bucket" }, "/cloudformation/", { "Ref" : "S3KeyPrefix"}, "/stacks/codepipeline.json"]] }
      }
    }
  },
  "Outputs": {
    "URL" : {
      "Description" : "URL for the deployed application",
      "Value" : { "Fn::GetAtt" : ["webapp", "Outputs.URL"] }
    }
  }
}
